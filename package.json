{
  "name": "@protocoldesigner-dev/protocol-executor",
  "version": "0.1.0",
  "description": "Protocol executor for TypeScript",
  "main": "lib/main/index.js",
  "typings": "lib/main/index.d.ts",
  "module": "lib/module/index.js",
  "repository": "https://github.com/protocoldesigner-dev/protocolexecutor-ts",
  "author": "ProtocolDesigner Team <dev@protocoldesigner.dev> (https://protocoldesigner.dev)",
  "license": "MIT",
  "keywords": [
    "state-machine",
    "protocol",
    "fsm",
    "typescript"
  ],
  "scripts": {
    "build": "npm-run-all build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "npm-run-all fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "npm-run-all build test:*",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:unit": "ava",
    "doc": "npm run doc:html",
    "doc:html": "typedoc src/ --out lib/docs",
    "doc:json": "typedoc src/ --json lib/docs/typedoc.json"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "ava": "^5.2.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "typedoc": "^0.23.10",
    "typescript": "^4.9.5"
  },
  "files": [
    "lib/main",
    "lib/module",
    "!**/*.json",
    "LICENSE",
    "README.md"
  ],
  "ava": {
    "failFast": true,
    "timeout": "10s",
    "typescript": {
      "rewritePaths": {
        "src/": "lib/main/"
      },
      "compile": false
    },
    "files": [
      "!lib/module/**"
    ]
  },
  "prettier": {
    "singleQuote": true
  }
}
